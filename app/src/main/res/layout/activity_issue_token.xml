<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IssueTokenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/rbScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:paddingStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Scan QR Code" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_vehicle_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:hint="Vehicle No"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Vehicle No" />

        <TextView
            android:id="@+id/just"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Do not use space or special character when entering Vehicle Number Eg : MH01AD1501" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_OwnerMobileNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:hint="Owner Mobile Number"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Owner Mobile Number" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:hint="Comments"
            android:inputType="textCapCharacters"
            android:maxLength="50"
            android:maxLines="5"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Comments" />
        <Button
            android:id="@+id/ButtonIssueToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:paddingStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Issue Token" />
    </LinearLayout>


</RelativeLayout>